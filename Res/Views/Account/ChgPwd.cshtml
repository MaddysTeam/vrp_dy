@model LocalPasswordModel
@{
	ViewBag.Title = "修改密码";
}
<div class="col-md-10 content-wrapper">
	<div class="row">
		<div class="col-lg-4 ">
			<ul class="breadcrumb">
				<li class="active">
					<i class="fa fa-home"></i>
					首页
				</li>
			</ul>
		</div>
	</div>

	<!-- main -->
	<div class="content">
		<div class="main-header">
			<h2>@ViewBag.Title</h2>
			<em></em>
		</div>

		<div class="main-content">

			<div class="col-sm-6">

				<!-- widget -->
				<div class="widget">
					<div class="widget-header">
						<h3><i class="fa fa-edit"></i> @ViewBag.Title</h3>
					</div>
					<div class="widget-content">
						@using (Html.BeginForm())
						{
							<div class="form-horizontal">
								@Html.AntiForgeryToken()
								@Html.ValidationSummary()
								<div class="row">
									<fieldset class="col-sm-12">
										<div class="form-group">
											@Html.LabelFor(m => m.OldPassword, new { @class = "control-label col-sm-3" })
											<div class="col-sm-9">
												@Html.TextBoxFor(m => m.OldPassword, new { @class = "form-control", maxlength = "80", placeholder = "旧密码" })
												@Html.ValidationMessageFor(m => m.OldPassword)
											</div>
										</div>
										<div class="form-group">
											@Html.LabelFor(m => m.NewPassword, new { @class = "control-label col-sm-3" })
											<div class="col-sm-9">
												@Html.TextBoxFor(m => m.NewPassword, new { @class = "form-control", maxlength = "80", placeholder = "新密码" })
												@Html.ValidationMessageFor(m => m.NewPassword)
											</div>
										</div>
										<div class="form-group">
											@Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label col-sm-3" })
											<div class="col-sm-9">
												@Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", maxlength = "80", placeholder = "确认密码" })
												@Html.ValidationMessageFor(m => m.ConfirmPassword)
											</div>
										</div>

										<div class="form-group">
											<div class="col-sm-9 col-lg-offset-3">
												<button type="submit" id="submit" class="btn btn-primary btn-block"><i class="fa fa-check-circle"></i> 保存</button>
											</div>
										</div>
									</fieldset>
								</div>
							</div>
						}
					</div>

				</div>
				<!-- end widget -->

			</div>

		</div>
		<!-- /main-content -->
	</div>
	<!-- /main -->
</div>
