@{
	ViewBag.Title = "报表 & 图表";
}

<div class="col-md-10 content-wrapper">
	<div class="row">
		<div class="col-lg-4 ">
			<ul class="breadcrumb">
				<li>
					<i class="fa fa-home"></i>
					<a href="@Url.Action("Index", "Home")">首页</a>
				</li>
				<li class="active">@ViewBag.Title</li>
			</ul>
		</div>
	</div>

	<!-- main -->
	<div class="content">
		<div class="main-header">
			<h2>@ViewBag.Title</h2>
			<em>分类查看资源库统计报表和图表</em>
		</div>

		<div class="main-content">

				<div class="row">
					<div class="col-md-4">
						<a href="@Url.Action("Summary", "Report")">
						<div class="contextual-summary-info contextual-background green-bg">
							<i class="fa fa-globe"></i>
							<p class="pull-right"><span>查看资源库全局统计情况</span> 总览统计</p>
						</div>
						</a>
					</div>
					<div class="col-md-4">
						<a href="@Url.Action("UserState", "Report")">
						<div class="contextual-summary-info contextual-background yellow-bg">
							<i class="fa fa-user-md"></i>
							<p class="pull-right"><span>查看资源库用户统计情况</span> 用户分布</p>
						</div>
						</a>
					</div>
					<div class="col-md-4">
						<a href="@Url.Action("ResourceState", "Report")">
						<div class="contextual-summary-info contextual-background red-bg">
							<i class="fa fa-list-alt"></i>
							<p class="pull-right"><span>查看资源库资源统计情况</span> 资源分布</p>
						</div>
						</a>
					</div>
				</div>


		</div>
		<!-- /main-content -->
	</div>
	<!-- /main -->
</div>
