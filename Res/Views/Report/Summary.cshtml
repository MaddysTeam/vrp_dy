@model ResReportSummary
@{
	ViewBag.Title = "总览统计";
}

<div class="col-md-10 content-wrapper">
	<div class="row">
		<div class="col-lg-4 ">
			<ul class="breadcrumb">
				<li>
					<i class="fa fa-home"></i>
					<a href="@Url.Action("Index", "Home")">首页</a>
				</li>
				<li><a href="@Url.Action("Main", "Report")">报表 & 图表</a></li>
				<li class="active">@ViewBag.Title</li>
			</ul>
		</div>
	</div>

	<!-- main -->
	<div class="content">
		<div class="main-header">
			<h2>@ViewBag.Title</h2>
			<em>查看资源库全局统计情况</em>
		</div>

		<div class="main-content">

			<!-- widget -->
			<div class="widget">
				<div class="widget-header">
					<h3><i class="fa fa-paperclip"></i> @ViewBag.Title</h3>
					<div class="btn-group widget-header-toolbar">
						<a href="#" title="专注" class="btn-borderless btn-focus"><i class="fa fa-eye"></i></a>
					</div>
				</div>

				<div class="widget-content">
					<!-- Grid -->
					<div id="table-responsive">
						<table class="table table-striped table-hover">
							<thead>
								<tr>
									<th class="titlewidth">统计项目</th>
									<th>数据</th>
								</tr>
							</thead>
							<tbody>
								<tr><td>用户总数</td><td>@Model.TotalUser</td></tr>
								<tr><td>资源总数</td><td>@Model.TotalResource</td></tr>
								<tr><td>资源总容量</td><td> 大于 @(Model.TotalResourceSize/(1024*1024*1024)) G</td></tr>
								<tr><td>资源总访问量</td><td>@Model.TotalView</td></tr>
								<tr><td>资源总收藏量</td><td>@Model.TotalFavorite</td></tr>
								<tr><td>资源总评分量</td><td>@Model.TotalStar</td></tr>
								<tr><td>资源总评论量</td><td>@Model.TotalComment</td></tr>
								<tr><td>资源总下载量</td><td>@Model.TotalDownload</td></tr>
								<tr><td>本周新增资源</td><td>@Model.CreateThisWeek</td></tr>
								<tr><td>本月新增资源</td><td>@Model.CreateThisMonth</td></tr>
								<tr><td>今年新增资源</td><td>@Model.CreateThisYear</td></tr>
							</tbody>
						</table>
					</div>
					<!-- end Grid-->
				</div>
				<!-- end widget content -->

			</div>
			<!-- end widget -->

		</div>
		<!-- /main-content -->
	</div>
	<!-- /main -->
</div>
