@{
	Layout = "~/Views/Shared/_ZcLayout.cshtml";
	ViewBag.Title = "首页";
}
<div class="row">
	<div class="col-md-12">
		<div class="div_cont fl w100">
			<div class="title">
				<b>活跃用户</b>
			</div>
	

				<table class="table table-striped">
		

					<tr>
						<th>头像</th>
						<th>用户</th>
						<td>登录次数</td>
					</tr>
					@foreach (ResActiveUser item in ViewBag.RankingOfActiveUser)
					{

						<tr>
							<td><a class="user_square" href="@Url.Action("Index", "CroMy", new { id = item.UserId })" title="@item.RealName"><img src="@item.FitPhotoPath" /></a></td>
							<td><a href="@Url.Action("Index", "CroMy", new { id=item.UserId })" title="@item.RealName"><span class="restitle">@item.RealName</span></a></td>
							
						
							<td>@item.ViewCount</td>
						</tr>
					}
				</table>




			<div>
				@Html.Pager((int)ViewBag.PageSize, (int)ViewBag.PageNumber, (int)ViewBag.TotalItemCount).Options(o => o
									.DisplayTemplate("_Bootstrap3Pagination")
								  .MaxNrOfPages(10)
								  .AlwaysAddFirstPageNumber()
								  .AddRouteValue("type", ViewBag.ParamType)
				  )
			</div>

		</div>
	</div>

</div>

