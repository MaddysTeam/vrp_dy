
@model MicroCourse

<div class="courseArea">
	<div class="courseRemove"><button class="btn btn-danger  btn-course-remove"><i class="fa fa-close"></i></button></div>
	@*<div class="form-group courseTitleArea">
		<label class="control-label col-sm-3"> <span class="request text-danger">*</span>实录标题</label>
		<div class="col-sm-9">
			@Html.TextBox("CourseTitle", Model.CourseTitle, new { @class = "form-control courseTitle", maxlength = "255", placeholder = "实录标题" })
		</div>
	</div>*@

	<div class="form-group courseUploader uploader">
		<label class="control-label col-sm-3"> <span class="request text-danger">*</span>实录视频</label>

		<div class="col-sm-9 video">
			<div class="input-group">
				@Html.TextBoxFor(m => m.VideoName, new { @class = "form-control resource-path", maxlength = "255", placeholder = "添加视频", @readonly="readonly" })
				<div class="input-group-btn">
					<button type="button" class="btn btn-default dropdown-toggle btn-upload" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-upload"></i></button>
					<button type="button" class="btn  btn-cancel @(Model.VideoId>0? "":"hidden")" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-remove"></i></button>
				</div>
			</div>
			<div class="progress" style="display:none">
				<div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
					<span class="sr-only"></span>
				</div>
			</div>
		</div>
		<input type="hidden" class="fileId" value="@Model.VideoId" />
	</div>

	<div class="form-group coverUploader uploader hidden">
		<label class="control-label col-sm-3">视频封面</label>
		<div class="col-sm-9 coverImageArea">
			@if (Model.CoverId > 0)
			{
				<img src="@Model.CoverPath" class="btn-upload" style="width:440px; height:226px;" />
			}
			else {
				<div id="showCover" title="点击选择封面" class="cover-bg btn-upload">
					<span>点击选择封面</span>
				</div>
			}
		</div>
		<input type="hidden" class="fileId" value="@Model.CoverId" />
	</div>

	<div class="form-group designUploader uploader">
		<label class="control-label col-sm-3"><span class="request text-danger">*</span>教学设计</label>

		<div class="col-sm-9">
			<div class="input-group">
				@Html.TextBoxFor(m => m.DesignName, new { @class = "form-control resource-path", maxlength = "255", placeholder = "添加教学设计" ,@readonly = "readonly" })
				<div class="input-group-btn">
					<button type="button" class="btn btn-default dropdown-toggle btn-upload" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-upload"></i> </button>
					<button type="button" class="btn  btn-cancel @(Model.DesignId>0? "":"hidden")" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-remove"></i></button>
				</div>
			</div>
			<div class="progress" style="display:none">
				<div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
					<span class="sr-only"></span>
				</div>
			</div>
		</div>
		<input type="hidden" class="fileId" value="@Model.DesignId" />
	</div>

	<div class="form-group summaryUploader uploader">
		<label class="control-label col-sm-3"> <span class="request"></span>教学反思</label>

		<div class="col-sm-9">
			<div class="input-group">
				@Html.TextBoxFor(m => m.SummaryName, new { @class = "form-control resource-path", maxlength = "255", placeholder = "添加教学反思", @readonly = "readonly" })
				<div class="input-group-btn">
					<button type="button" class="btn btn-default dropdown-toggle btn-upload" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-upload"></i> </button>
					<button type="button" class="btn  btn-cancel @(Model.SummaryId>0? "":"hidden")" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-remove"></i></button>
				</div>
			</div>
			<div class="progress" style="display:none">
				<div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
					<span class="sr-only"></span>
				</div>
			</div>
		</div>
		<input type="hidden" class="fileId" value="@Model.SummaryId" />
	</div>

	<div class="form-group coursewareUploader uploader">
		<label class="control-label col-sm-3"> <span class="request"></span>课件</label>

		<div class="col-sm-9">
			<div class="input-group">
				@Html.TextBoxFor(m => m.CoursewareName, new { @class = "form-control resource-path", maxlength = "255", placeholder = "添加课件", @readonly = "readonly" })
				<div class="input-group-btn">
					<button type="button" class="btn btn-default dropdown-toggle btn-upload" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-upload"></i> </button>
					<button type="button" class="btn  btn-cancel @(Model.CoursewareId>0? "":"hidden")" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-remove"></i></button>
				</div>
			</div>
			<div class="progress" style="display:none">
				<div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
					<span class="sr-only"></span>
				</div>
			</div>
		</div>
		<input type="hidden" class="fileId" value="@Model.CoursewareId" />
	</div>

	<div class="form-group attachmentUploader uploader">
		<label class="control-label col-sm-3"> <span class="request"></span>其他附件</label>

		<div class="col-sm-9">
			<div class="input-group">
				@Html.TextBoxFor(m => m.AttachmentName, new { @class = "form-control resource-path", maxlength = "255", placeholder = "添加其他附件", @readonly = "readonly" })
				<div class="input-group-btn">
					<button type="button" class="btn btn-default dropdown-toggle btn-upload" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-upload"></i> </button>
					<button type="button" class="btn  btn-cancel @(Model.AttachmentId>0? "":"hidden")" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-remove"></i></button>
				</div>
			</div>
			<div class="progress" style="display:none">
				<div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
					<span class="sr-only"></span>
				</div>
			</div>
		</div>
		<input type="hidden" class="fileId" value="@Model.AttachmentId" />
	</div>

	@Html.Hidden("courseId", Model.CourseId, new { @class = "courseId" })

</div>


